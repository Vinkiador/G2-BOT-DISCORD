var room = HBInit({ roomName: "ðŸ“¸InstaBonkðŸ“¸", maxPlayers: 16, playerName : "INSTABOTÂ©", public : true}); //maxPlayers = quantidade de vagas
//caso queira senha, acrescente isso depois do "public : true": ,password: "SENHA DA SALA"
room.setDefaultStadium("Classic");
